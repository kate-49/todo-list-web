<h1>Items in the todo list for category: <%= @items.first.category %></h1>

<form action="/bycategory" method="GET">
<select id="category" name="category">
  <option value="Finance">Finance</option>
  <option value="Domestic">Domestic</option>
</select>
<input type="submit" value="submit">
</form>

<table>
  <th>
    Name
  </th>
  <% for @item in @items %>
    <tr>
      <td>
        <%= @item.name %>
      </td>
    </tr>
  <% end %>
</table>

<ul>
<li><a href="/">Homepage</a></li>
</ul>
